{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react-native",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "target": "es2015",
    "lib": [
      "es6",
      "dom"
    ],
    "skipLibCheck": true,
    "typeRoots": [
      "../node_modules/@types",
      "../@types"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "app",
    "test",
    "storybook"
  ],
}